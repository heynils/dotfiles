[user]
    name = Nils Heyman
    email = nils.heyman@forefront.se
    username = heynils

[init]
    defaultBranch = main

[status]
    short = true

[core]
    pager = delta
    editor = nvim

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color

[merge]
     conflictstyle = merge

[diff]
    colorMoved = default

[push]
    default = current

[url "git@github.com:"]
    insteadOf = https://github.com/
